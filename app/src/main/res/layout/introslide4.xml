<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/intro_4"
  android:backgroundTint="@color/backgrountTint"
  android:backgroundTintMode="src_atop">

    <RelativeLayout
      android:id="@+id/lay"
      android:layout_width="262dp"
      android:layout_height="575dp"
      android:layout_centerInParent="true">

        <TextView
          android:id="@+id/tv1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignStart="@+id/tv2"
          android:layout_alignParentTop="true"
          android:layout_marginTop="20dp"
          android:layout_marginBottom="-2dp"
          android:text="and"
          android:textColor="@color/WhiteTint"
          android:textSize="20sp" />

        <TextView
          android:id="@+id/tv2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/tv1"
          android:layout_marginBottom="20dp"
          android:text="EARN"
          android:layout_alignStart="@+id/icon"
          android:textColor="@color/WhiteTint"
          android:textSize="32sp" />

        <ImageView
          android:id="@+id/icon"
          android:layout_width="200dp"
          android:layout_height="200dp"
          android:layout_below="@+id/tv2"
          android:layout_centerHorizontal="true"
          android:src="@drawable/img_intro_4" />

        <ImageView
          android:layout_width="345dp"
          android:layout_height="507dp"
          android:layout_alignStart="@+id/icon"
          android:layout_alignTop="@+id/icon"
          android:layout_alignParentEnd="true"
          android:layout_marginStart="-13dp"
          android:layout_marginTop="-33dp"
          android:layout_marginEnd="-64dp"
          android:src="@drawable/img_intro4_2" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/icon"
          android:id="@+id/tv3"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="36dp"
          android:text="The winnings will be \ndirectly sent to your walllet"
          android:textAlignment="center"
          android:textColor="@color/WhiteTint"
          android:textSize="20sp" />

        <ImageButton
          android:id="@+id/btn_next"
          android:layout_width="54dp"
          android:layout_height="68dp"
          android:layout_below="@id/tv3"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="70dp"
          android:background="@drawable/ic_navigate_next_black_24dp" />
    </RelativeLayout>



</RelativeLayout>